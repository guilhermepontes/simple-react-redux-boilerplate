{
  "name": "simple-react-redux-boilerplate",
  "version": "0.0.1",
  "description": "starter kit for modern react apps",
  "main": "src/index.js",
  "repository": "git@github.com:guilhermepontes/simple-react-redux-boilerplate.git",
  "author": "Guilherme Pontes <guilhermepontes@msn.com>",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "webpack-dev-server --inline --hot --content-base public/",
    "start:prod": "NODE_ENV='production' webpack -p && pm2 start server.js",
    "build": "NODE_ENV='production' webpack -p",
    "test": "jest",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint application/",
    "lint:css": "stylelint ./application/**/*.sass --syntax scss"
  },
  "dependencies": {
    "bem-classname": "^0.1.1",
    "express": "^4.14.0",
    "lodash": "^4.17.2",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "redux-promise-middleware": "^4.2.0",
    "redux-thunk": "^2.1.0",
    "whatwg-fetch": "^2.0.1"
  },
  "devDependencies": {
    "node-sass": "^4.1.1",
    "compression": "^1.6.2",
    "if-env": "^1.0.0",
    "css-loader": "^0.26.1",
    "pm2": "^2.2.3",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-dev-server": "^1.16.2",
    "webpack-hot-middleware": "^2.14.0",
    "sass-loader": "^4.1.1",
    "postcss": "^5.2.7",
    "redux-logger": "^2.7.4",
    "postcss-import": "^9.0.0",
    "postcss-loader": "^1.2.1",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-jest": "^18.0.0",
    "enzyme": "^2.7.0",
    "eslint": "^3.12.2",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-react": "^6.8.0",
    "jest": "^18.0.0",
    "react-addons-test-utils": "^15.4.1",
    "redux-mock-store": "^1.2.2",
    "style-loader": "^0.13.1",
    "stylelint": "^7.7.0",
    "stylelint-config-primer": "^1.3.0",
    "stylelint-scss": "^1.4.1",
    "stylelint-webpack-plugin": "^0.4.2"
  }
}
