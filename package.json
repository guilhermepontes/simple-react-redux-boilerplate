  "author": "Guilherme Pontes <guilhermepontes@msn.com>",

  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "webpack-dev-server --inline --content-base public/ --history-api-fallback",
    "start:prod": "webpack && pm2 start server.js",

	"test": "jest",

	"lint": "npm run lint:css && npm run lint:js",
	"lint:js": "eslint application/",
	"lint:css": "stylelint ./app/**/*.css"
  },

  "dependencies": {
    "compression": "^1.6.2",
    "express": "^4.14.0",
    "if-env": "^1.0.0",
    "lodash": "^4.17.2",
    "pm2": "^2.2.2",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "whatwg-fetch": "^2.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "enzyme": "^2.7.0",
    "eslint": "^3.12.2",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-react": "^6.8.0",
    "jest": "^18.0.0",
    "postcss": "^5.2.7",
    "postcss-import": "^9.0.0",
    "postcss-loader": "^1.2.1",
